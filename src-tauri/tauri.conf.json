{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Copyclip",
  "version": "0.1.0",
  "identifier": "dev.hasib.copyclip",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Copyclip",
        "width": 375,
        "height": 812,
        "minWidth": 375,
        "minHeight": 812,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": false,
        "focus": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}