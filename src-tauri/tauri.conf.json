{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "YinVim",
  "version": "0.1.0",
  "identifier": "dev.hasib.yinvim",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "YinVim",
        "width": 500,
        "height": 720,
        "minWidth": 400,
        "minHeight": 620,
        "resizable": false,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "focus": false,
        "alwaysOnTop": false,
        "acceptFirstMouse": true,
        "allowLinkPreview": true,
        "minimizable": true,
        "devtools": true,
        "visible": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}